<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>WineToilet</defName>
    <label>wine toilet</label>
    <description>Make toilet wine in here. Try not to puke.</description>
    <thingClass>Building_WorkTable</thingClass>
	<graphicData>
			<texPath>Workbench/toiletworkbench/toiletworkbench</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(0.7,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
    <constructEffect>ConstructWood</constructEffect>
    <costList>
      <WoodLog>120</WoodLog>
      <Steel>30</Steel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>Make_ToiletWine</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
	<rotatable>true</rotatable>
  </ThingDef>
  
  <ThingDef ParentName="BenchBase">
    <defName>TequilaBucket</defName>
    <label>tequila bucket</label>
    <description>Not the best way to make tequila but it does the job.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Workbench/bucketworkbench</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	  <drawSize>(0.5,0.5)</drawSize>
    </graphicData>
    <constructEffect>ConstructWood</constructEffect>
    <costList>
      <WoodLog>50</WoodLog>
      <Steel>10</Steel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
	<hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>Make_ShoddyTequila</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
</Defs>